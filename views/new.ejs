<% include partials/header%>
    <div class= "ui main container segment">
        <div class ="ui huge header">New Blog</div>
        <form  class= "ui fluid form" action="/blogs" method="POST">
            <div class="field">
                <label>Title</label>
            <input type="text" placeholder="title" name="blog[title]">
            </div>
            <div class="field">
                 <label>Blog Post</label>
                <textarea name="blog[content]"></textarea>
            </div>
            <div class="field">
                 <label>Image url</label>
                <input type="text" placeholder="image" name="blog[image]">
            </div>
            <div class="field">
                 <label>Author</label>
                <input type="text" placeholder="author" name="blog[author]">
            </div>
            <div class="field">
                 <label>Created on</label>
                <input type="date" placeholder="date" name="blog[created]">
            </div>
            <div class="field"> <input class="button ui primary" type="submit">
            </div>
           
        </form>
    </div>
<% include partials/footer%>