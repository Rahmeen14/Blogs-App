<% include partials/header%>
<div class="ui main text container">
<h1 class="ui huge header" style=" text-align: center"><%= blog.title%></h1>
    <div class="ui top attached segment">
    <div class="item" style="margin-bottom: 25px">
        <img class="ui centered rounded image" src="<%= blog.image%>">
    </div>
    <div class="description" style="margin-bottom: 25px">
        <h4>
            <%- blog.content %>
        </h4>
    </div>
       <div class="content" style="margin-bottom: 25px"> 
        <p><%= blog.created.toDateString() %></p> 
       </div>
    <div style="margin-bottom: 25px">
   <div style="margin-bottom: 25px"> <em>By ~ <%= blog.author%></em> </div><br>
  
        <a class="ui button blue basic" href="/blogs/<%= blog._id%>/edit">Edit Post</a>
    
    <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST" style="display: inline">
        <input type="submit" class="ui button red basic" value="Delete">
    </div>
    </div>
</div>
<% include partials/footer%>
